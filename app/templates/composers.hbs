{{!--
  The list of all composers. A create composer button brings the user to a page where they can create new nodes.
--}}

<div class='container mb-3'>
  <h3>Composers</h3>
  {{#link-to 'application'}}{{#bs-button class='close'}}{{fa-icon 'times'}}{{/bs-button}}{{bs-tooltip title="Back"}}{{/link-to}}
</div>
<div class='container'>
  <div class='row'>
    <div class='col-12'>
      <div class='list-group mb-3'>
          {{#each model as |composer|}}
            <div class='list-group-item list-group-item-action'>
              {{one-composer composer=composer}}
            </div>
          {{/each}}
      </div>
    </div>
  </div>
</div>
{{outlet}}
