<div class="container">
  <div class="card">
    <div class="card-body">
      {{#bs-form formLayout=formLayout model=this onSubmit=(action "submit") as |form|}}
        {{form.element controlType="text" label="Bolt Connection" placeholder="Bolt Connection (bolt://)" property="bolt" required=true}}
        {{form.element controlType="text" label="Neo4j Username" placeholder="Neo4j Username" property="neo4jUser" required=true}}
        {{form.element controlType="password" label="Neo4j Password" placeholder="Neo4j Password" property="neo4jPass" required=true}}
        {{form.element controlType="text" label="User" placeholder="User" property="user" required=true}}
        {{form.element controlType="password" label="Password" placeholder="Password" property="password" required=true}}
        {{form.element controlType="checkbox" label="Remember me" property="rememberMe"}}
        {{bs-button defaultText="Submit" type="primary" buttonType="submit"}}
      {{/bs-form}}
    </div>
  </div>
</div>