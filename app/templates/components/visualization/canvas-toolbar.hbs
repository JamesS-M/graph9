Toolbar

{{#paper-speed-dial
  onMouseEnter=(action (mut open) true) onMouseLeave=(action (mut open) false)
  open=open onToggle=(action (mut open)) hoverFull=hoverFull as |dial|}}
  {{#dial.trigger}}
    {{#paper-button fab=true}}
      {{paper-icon "menu"}}
    {{/paper-button}}
  {{/dial.trigger}}

  {{#dial.actions as |actions|}}
    {{#actions.action}}
      {{#paper-button mini=true raised=true onClick=(action (mut showPromptDialog))}}
        {{paper-icon "search"}}
      {{/paper-button}}
    {{/actions.action}}

    {{#actions.action}}
      {{#paper-button mini=true raised=true onClick=(action (mut drawingRelationships) true)}}
        {{paper-icon "border_color"}}
      {{/paper-button}}
    {{/actions.action}}

    {{#actions.action}}
      {{#paper-button mini=true raised=true onClick=(action (mut model) [])}}
        {{paper-icon "undo"}}
      {{/paper-button}}
    {{/actions.action}}
  {{/dial.actions}}
{{/paper-speed-dial}}


{{#if showPromptDialog}}
  {{#paper-dialog
    onClose=(action "toggleSearchDialog")
    clickOutsideToClose=true
    fullscreen=true
  }}

    {{#paper-dialog-content}}

      {{visualization/toolbar/query-builder
        search=(action 'search')
      }}

    {{/paper-dialog-content}}

  {{/paper-dialog}}
{{/if}}