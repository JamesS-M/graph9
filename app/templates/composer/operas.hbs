{{!--
  Shows all of a composer's operas.
--}}

<h4>{{model.firstObject.title}}</h4>
{{#each model as |operas|}}
  <section class='card border-primary bg-light mb-3'>
    <div class='card-body'>
        <div class='card-header'>
          <span class='badge badge-primary'>Title:</span> {{operas.title}}
        </div>
        <div class='card-footer'>
          <span class='badge badge-primary'>Date:</span> {{operas.date}}<br>
          <span class='badge badge-primary'>Troupe:</span> {{operas.troupe}}<br>
          <span class='badge badge-primary'>City:</span> {{operas.place}}
        </div>
        {{!--{{#link-to 'performance-edit' operas.id}}{{#bs-button type="button" class='group-list-item btn-outline-primary btn-xs'}}{{fa-icon 'edit'}}{{bs-tooltip title="Edit"}}{{/bs-button}}{{/link-to}}--}}
        {{#link-to 'node-edit' operas.id}}{{#bs-button type="button" class='group-list-item btn-outline-primary btn-xs'}}{{fa-icon 'edit'}}{{bs-tooltip title="Edit"}}{{/bs-button}}{{/link-to}}
        {{#if rb.settingDestination}}
          {{#bs-button class="btn btn-xs btn-outline-warning" onClick=(action 'setDestination' operas.id)}}{{fa-icon 'pencil-alt'}}{{bs-tooltip title="Set as Destination"}}{{/bs-button}}
        {{else}}
          {{#bs-button class="btn btn-xs btn-outline-success" onClick=(action 'setSource' operas.id)}}{{fa-icon 'pencil-alt'}}{{bs-tooltip title="Set as Source"}}{{/bs-button}}
        {{/if}}
    </div>
  </section>
{{/each}}
{{outlet}}